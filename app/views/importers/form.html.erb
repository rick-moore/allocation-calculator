<H1 class='p-3'>CSV Import</H1>

<%= form_for @importer do |f| %>
  <div style='width: 300px'>
    <div class='ps-3 form-text'> Upload a CSV: </div>
    <%= f.file_field :file, class: 'p-3 m-3 form-control' %>
    <%= f.radio_button :type, 'departure' %>
    <%= f.label :type, 'Departure', value: 'departure' %>
    <br>
    <%= f.radio_button :type, 'departure_warning' %>
    <%= f.label :type, 'Departure Warning', value: 'departure_warning' %>
    <%= submit_tag 'Upload', class: 'btn btn-success mx-5' %>
  </div>
<% end %>
